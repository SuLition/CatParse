{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "文案小助手",
  "version": "0.1.0",
  "identifier": "com.douyintools.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:15173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "minWidth": 960,
        "minHeight": 680,
        "title": "文案助手",
        "label": "main",
        "width": 960,
        "height": 680,
        "decorations": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "binaries/backend_server.exe"
    ]
  }
}
